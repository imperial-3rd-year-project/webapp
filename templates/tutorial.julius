
$(function() {
  $("##{rawJS codeFormId}").submit(function(event) {
    event.preventDefault();

    var code = document.getElementById("#{rawJS codeTextAreaId}").innerText;
    // (Browsers that enforce the "required" attribute on the textarea won't see this alert)
    if (!code) {
      alert("Please write some code to run.");
      return;
    }

	let postData = JSON.stringify(code);
    console.log(postData);
    // Make an AJAX request to the server to create a new comment
    $.ajax({
      url: '@{RunCodeR}',
      type: 'POST',
      contentType: "application/json",
      data: postData,
      success: function (data) {
        console.log(data);
        document.getElementById(#{toJSON consoleTextAreaId}).innerHTML = data
      },
      error: function (data) {
        console.log("Error creating comment: " + data);
      },
    });

  });
});
